@model List<UpFit__main.Models.User>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    ViewBag.Title = "ListUsers";
}

<h2>Manage Users</h2>

@Html.ActionLink("Back", "Home", "Admins", new { area = "" }, new { @class = "btn btn-primary btn-custom" })

@Html.ActionLink("New User", "AddUser", new { area = "" }, new { @class = "btn btn-primary btn-custom" })

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SubscriptionTypeFK)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubscriptionTypeFK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteUser", new { id = item.UserID }, new { @class = "btn btn-primary btn-custom"})
                @Html.ActionLink("Details", "ListUser", new { id = item.UserID },new { @class = "btn btn-primary btn-custom"})
            </td>
        </tr>
    }

</table>
